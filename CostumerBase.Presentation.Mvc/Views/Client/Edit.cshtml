@model ClientViewModel 
@{
}

<h1>Editar Cliente</h1>
<form method="put" asp-controller="Client" asp-action="EditClient" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="NameClient">Nome</label>
        <input asp-for="NameClient" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Logo">Logotipo</label>
        <input asp-for="Logo" class="form-control" />
    </div>
    <!-- Adicione outros campos do cliente aqui -->

    <h2>Endereços</h2>
    <table class="table">
        <thead>
            <tr>
                <th>País</th>
                <th>Cidade</th>
                <th>Estado</th>
                <th>Bairro</th>
                <th>Rua</th>
                <th>Número</th>
                <th>Complemento</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var address in Model.AddressClient)
            {
                <tr>
                    <td>@address.Country</td>
                    <td>@address.City</td>
                    <td>@address.State</td>
                    <td>@address.Neighborhood</td>
                    <td>@address.Road</td>
                    <td>@address.Number</td>
                    <td>@address.Complement</td>
                    <td>
                        <a asp-page="EditAddress" asp-route-id="@address.Id">Editar</a> |
                        <a asp-page="DeleteAddress" asp-route-id="@address.Id">Excluir</a> |
                        <a asp-page="DetailsAddress" asp-route-id="@address.Id">Detalhes</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h2>Adicionar Novo Endereço</h2>
    <div class="form-group">
        <label asp-for="AddressClient[0].Country">País</label>
        <input asp-for="AddressClient[0].Country" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AddressClient[0].City">Cidade</label>
        <input asp-for="AddressClient[0].City" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AddressClient[0].State">Estado</label>
        <input asp-for="AddressClient[0].State" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AddressClient[0].Neighborhood">Bairro</label>
        <input asp-for="AddressClient[0].Neighborhood" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AddressClient[0].Road">Rua</label>
        <input asp-for="AddressClient[0].Road" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AddressClient[0].Number">Número</label>
        <input asp-for="AddressClient[0].Number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AddressClient[0].Complement">Complemento</label>
        <input asp-for="AddressClient[0].Complement" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
</form>
<a asp-controller="Client" asp-action="Index">Voltar para a lista de clientes</a>